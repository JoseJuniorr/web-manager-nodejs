<% layout ('layouts/adm') -%>

<div class="container">
  <div class="mt-4">
    <h1>Novo Post</h1>
  </div>

  <hr />

  <form action="/posts/create-post" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <input
        type="text"
        class="form-control"
        name="title"
        id="exampleFormControlInput1"
        placeholder="Título"
      />
    </div>
    <div class="form-group">
      <textarea
        type="text"
        class="form-control"
        id="exampleFormControlInput1"
        placeholder="Breve descrição"
        name="description"
      ></textarea>
    </div>
    <div class="form-group">
      <textarea
        type="text"
        class="form-control"
        id="exampleFormControlInput1"
        placeholder="Conteúdo principal"
        name="content"
      ></textarea>
    </div>
    <div class="form-group">
      
      <input type="file" name="images" id="uploadImgs" multiple />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
  </form>
</div>
