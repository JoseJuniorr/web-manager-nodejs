<% layout ('layouts/login') -%>

<form action="/users/login" class="form-login text-center" method="POST">
  <img class="mb-4" src="/images/profile/user.png" alt="logo" width="72" />

  <p class="h3 mb-3 text-uppercase">Login</p>
  <% include ../partials/flash-messages %>

  <div class="form-group">
    <!-- Email -->
    <input
      type="email"
      name="email"
      id="defaultLoginFormEmail"
      class="form-control mb-4"
      placeholder="E-mail"
    />
  </div>
  <div class="form-group">
    <!-- Password -->
    <input
      type="password"
      name="password"
      id="defaultLoginFormPassword"
      class="form-control mb-4"
      placeholder="Senha"
    />
  </div>
  <button class="btn btn-lg btn-primary btn-block" type="submit">
    Acessar
  </button>
  <div class="d-flex justify-content-around mt-4">
    <div>
      <!-- Remember me -->
      <div class="custom-control custom-checkbox">
        <input
          type="checkbox"
          class="custom-control-input"
          id="defaultLoginFormRemember"
        />
        <label class="custom-control-label" for="defaultLoginFormRemember"
          >Lembrar</label
        >
      </div>
    </div>
    <div>
      <!-- Forgot password -->
      <a href="/users/forgot">Esqueceu a senha?</a>
    </div>
  </div>
  <div class="mt-2">
    <a href="/users/register">NÃ£o possui conta?</a>
  </div>

  <div class="my-4">
    <i class="fas fa-arrow-left"></i>
    <a href="/" class="">Voltar para o site</a>
  </div>
</form>
